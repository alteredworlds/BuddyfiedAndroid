<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.alteredworlds.buddyfied.MessageUserActivity.MessageUserFragment">

    <TextView
        android:id="@+id/message_recipient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/StandardText"
        android:padding="5dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/StandardText"
        android:hint="@string/message_title_hint"
        android:inputType="textPersonName"
        android:textCursorDrawable="@drawable/colour_cursor"
        android:background="@drawable/attribute_search"
        android:padding="5dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/message_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/StandardText"
        android:hint="@string/message_body_hint"
        android:inputType="textMultiLine"
        android:textCursorDrawable="@drawable/colour_cursor"
        android:background="@drawable/attribute_search"
        android:padding="5dp" />
</LinearLayout>
